<RelativeLayout android:background="?gray_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:id="@id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar" android:id="@id/toolbar_layout" />
    <ScrollView
        android:layout_below="@id/toolbar_layout"
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_khr"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="开户人" />
                <TextView
                    android:layout_marginRight="16.0dip"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@+id/khr"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_yh"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="银行" />
                <TextView
                    android:layout_marginRight="16.0dip"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@+id/yh"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_branchbank"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="开户支行" />
                <TextView
                    android:layout_marginRight="16.0dip"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@+id/branchbank"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bankcard"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="卡号" />
                <TextView
                    android:layout_marginRight="16.0dip"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@+id/kh"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/logo_rl"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="85.0dip">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="LOGO"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.0dip"
                    android:layout_width="63.0dip"
                    android:layout_height="63.0dip"
                    android:id="@+id/logo"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/yyzz_rl"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="85.0dip">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="营业执照"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.0dip"
                    android:layout_width="63.0dip"
                    android:layout_height="63.0dip"
                    android:id="@+id/yyzz"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wsxkz_rl"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="85.0dip">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="卫生许可证"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.0dip"
                    android:layout_width="63.0dip"
                    android:layout_height="63.0dip"
                    android:id="@+id/wsxkz"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qt_rl"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/selector_cell_down_line"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="85.0dip">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="其他证件照片"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16.0dip"
                    android:layout_width="63.0dip"
                    android:layout_height="63.0dip"
                    android:id="@+id/qtzp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_downline_common"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">

                <TextView
                    android:id="@id/imageView1"
                    android:paddingRight="16.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableRight="@drawable/icon_close"
                    android:layout_alignParentRight="true" />

                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView2"
                    android:background="@null"
                    android:paddingLeft="16.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="姓名"
                    android:singleLine="true"
                    android:layout_toLeftOf="@id/imageView1"/>
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_downline_common"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:id="@id/textView3"
                    android:paddingRight="16.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableRight="@drawable/icon_close"
                    android:layout_alignParentRight="true" />
                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView4"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="16.0dip"
                    android:hint="手机号码"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:layout_toLeftOf="@id/textView3"
                    android:inputType="number" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_downline_common"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:id="@id/textView5"
                    android:paddingRight="16.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableRight="@drawable/icon_close"
                    android:layout_alignParentRight="true" />
                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView6"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="16.0dip"
                    android:hint="固定电话"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:layout_toLeftOf="@id/textView5"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/relativeLayout1"
                android:clickable="true"
                android:orientation="horizontal"
                android:background="@drawable/bg_downline_common"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:id="@id/textView7"
                    android:paddingRight="16.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableRight="@drawable/ic_right_grey"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:id="@id/textView8"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16.0dip"
                    android:hint="省、市、区"
                    android:layout_toLeftOf="@id/textView7"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:background="@drawable/bg_downline_common"
                android:layout_width="fill_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@id/textView9"
                    android:paddingRight="16.0dip"
                    android:paddingBottom="16.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_close"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />
                <EditText
                    android:padding="16.0dip"
                    android:lines="5"
                    android:lineSpacingExtra="8.0dip"
                    android:gravity="top"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView10"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="详细地址"
                    android:layout_toLeftOf="@id/textView9" />
            </RelativeLayout>

            <com.material.widget.PaperButton
                android:layout_marginTop="16dp"
                android:id="@id/button1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/paper_height"
                app:paper_text="保存"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
