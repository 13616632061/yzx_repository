<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?gray_bg"
    android:paddingTop="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="150dp">
                <RelativeLayout
                    android:id="@id/relativeLayout3"
                    android:clickable="true"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">
                    <RelativeLayout
                        android:padding="20dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@id/textView1"
                            android:text="1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_color"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_below="@id/textView1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日订单量"
                            android:textColor="@color/text_secondary_color"
                            android:textSize="16sp" />

                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/divider_color"
                        android:layout_width="@dimen/divider_height"
                        android:layout_height="match_parent"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/relativeLayout2"
                    android:clickable="true"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">
                    <RelativeLayout
                        android:padding="20dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@id/textView2"
                            android:text="￥505"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_color"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_below="@id/textView2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日营业额"
                            android:textColor="@color/text_secondary_color"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/set_line" android:id="@+id/set_item_1" />
            <include layout="@layout/set_line" android:id="@+id/set_item_2" />
            <include layout="@layout/set_line" android:id="@+id/set_item_3" />
            <include layout="@layout/set_line_spacer" />
            <include layout="@layout/set_line" android:id="@+id/set_item_4" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>