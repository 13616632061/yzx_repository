<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:id="@id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar_white" android:id="@id/toolbar_layout" />

    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:layout_below="@id/toolbar_layout"
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:gravity="center"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/about_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/input_bg"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:id="@id/textView1"
                    android:paddingRight="16.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableRight="@drawable/icon_close"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_secondary_color"
                    android:id="@id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_user"
                    android:layout_centerVertical="true" />
                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView3"
                    android:background="@null"
                    android:paddingLeft="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入用户名"
                    android:singleLine="true"
                    android:layout_toLeftOf="@id/textView1"
                    android:layout_toRightOf="@id/textView2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/input_bg"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:id="@id/textView4"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginTop="12.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/eye_close"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_secondary_color"
                    android:id="@id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_password"
                    android:layout_centerVertical="true" />
                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView6"
                    android:background="@null"
                    android:paddingLeft="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入密码"
                    android:password="true"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:layout_toLeftOf="@id/textView4"
                    android:layout_toRightOf="@id/textView5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/input_bg"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <ImageView
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="8.0dip"
                    android:id="@id/textView7"
                    android:layout_width="95.0dip"
                    android:layout_height="@dimen/btn_height_commen_middle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_secondary_color"
                    android:id="@id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_captcha"
                    android:layout_centerVertical="true" />
                <EditText
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:id="@id/textView9"
                    android:background="@null"
                    android:paddingLeft="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:layout_toLeftOf="@id/textView7"
                    android:layout_toRightOf="@id/textView8" />
            </RelativeLayout>

            <RelativeLayout
                 android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/s_component_height">

                <CheckBox
                    android:textColor="#ff434e5a"
                    android:id="@id/cb_right"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="32.0dip"
                    android:layout_marginRight="10.0dip"
                    android:button="@drawable/selector_setting_passenger_checkbox"
                    android:layout_toRightOf="@id/tv_left"
                    android:layout_centerVertical="true" />
                <TextView
                    android:textColor="@color/text_secondary_color"
                    android:textSize="@dimen/text_size_info"
                    android:id="@id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家"
                    android:layout_toRightOf="@id/cb_right"
                    android:layout_centerVertical="true" />

                <CheckBox
                    android:textColor="#ff434e5a"
                    android:id="@id/cb_left"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10.0dip"
                    android:button="@drawable/selector_setting_passenger_checkbox"
                    android:layout_centerVertical="true" />
                <TextView
                    android:textColor="@color/text_secondary_color"
                    android:textSize="@dimen/text_size_info"
                    android:id="@id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务员"
                    android:layout_toRightOf="@id/cb_left"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <com.material.widget.PaperButton
                android:layout_marginTop="16dp"
                android:id="@id/button1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/paper_height"
                app:paper_text="登录"/>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@id/relativeLayout1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_oval"
            android:src="@drawable/icon_back_white"/>
    </RelativeLayout>
</RelativeLayout>
