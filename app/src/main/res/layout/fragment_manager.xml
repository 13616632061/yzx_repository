<RelativeLayout
    android:background="?gray_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/managmentfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <ImageView
            android:id="@+id/iv_managmentfragment_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true"
            android:text="店铺管理"/>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_previews"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="预览"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_marginTop="@dimen/layout_x_5"
        android:layout_below="@id/managmentfragment_layout"
        android:text="功能正在开发中..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:layout_below="@id/managmentfragment_layout"
        android:id="@id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="150dp">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:id="@+id/point_layout"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>
            </RelativeLayout>
            <TextView
                android:textColor="#adadad"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/tv_yxservice"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/goods_management_layout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/selset_write"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/tv_goods_management"
                        android:text="@string/tv_goods_management"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@drawable/product_selecet"
                        android:layout_above="@+id/tv_goods_management"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/sales_statistics_layout"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/selset_write"
                    android:layout_marginLeft="1dp"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/tv_vip"
                        android:text="商品销售统计"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@drawable/product_selecet"
                        android:layout_above="@+id/tv_vip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/wholesaleorders_layout"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/selset_write"
                    android:layout_marginLeft="1dp"
                    android:layout_height="70dp">
                    <TextView
                        android:id="@+id/tv_store"
                        android:text="批发订货"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@drawable/product_selecet"
                        android:layout_above="@+id/tv_store"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_width="25dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/storeinfo_layout"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/selset_write"
                    android:layout_marginLeft="1dp"
                    android:layout_height="85dp">
                    <TextView
                        android:id="@+id/tv_storeinfo"
                        android:text="数据分析"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:background="@drawable/storeinfo_analyse"
                        android:layout_above="@+id/tv_storeinfo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="3dp"
                        android:layout_width="37dp"
                        android:layout_height="35dp" />
                </RelativeLayout>
            </LinearLayout>
            </LinearLayout>
       </ScrollView>
</RelativeLayout>