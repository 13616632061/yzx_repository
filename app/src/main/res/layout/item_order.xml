<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@id/linearlayout01"
    android:background="@drawable/selector_cell_pressed"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_component_height">
        <TextView
            android:id="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:text=""/>
        <TextView
            android:id="@id/textView10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""/>
    </RelativeLayout>
    <TextView
        android:background="@color/divider_color"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_height" />
    <LinearLayout
        android:padding="@dimen/listview_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="6dp"
            android:visibility="gone"
            android:id="@id/textView2"
            android:lineSpacingExtra="2dp"
            android:singleLine="false"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@id/textView4"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="30dp"
                android:id="@id/textView5"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@id/relativeLayout1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:gravity="center_vertical"
                android:id="@id/textView6"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@id/linearLayout5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_component_height">
        <TextView
            android:background="@color/divider_color"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height" />
        <LinearLayout
            android:id="@id/linearLayout2"
            android:gravity="right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@id/editText1"
                android:background="@drawable/selector_flat_text"
                android:textSize="14sp"
                android:textColor="@color/accent_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/op_button_height"
                android:text="点击确认"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@id/editText2"
                android:background="@drawable/selector_flat_text"
                android:textSize="14sp"
                android:textColor="@color/accent_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/op_button_height"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/set_line_grey_spacer" />
</LinearLayout>